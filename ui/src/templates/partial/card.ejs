<div class="card" style="box-shadow: 0px 0px 14px; aspect-ratio: 74 / 105; max-height: 90vh; margin: 0 auto">
  <div class="card-body">
    <h1 class="text-center card-title">
      <%= task.name %>
    </h1>
    <hr />
    <% if (task.category) { %>
    <h2 class="text-center card-subtitle">
      <%= task.category %> - <%= task.duration %>
    </h2>
    <hr />
    <% } %>
    <% if (task.description) { %>
    <p class="card-text">
      <%= task.description %>
    </p>
    <hr />
    <% } %>
    <% if (task.data) { %>
    <ul id="card-data">
      <% task.data.forEach(element => { %>
      <li class="card-text">
        <%= element.typedef %> : <%= element.value %>
      </li>
      <% }) %>
    </ul>
    <hr />
    <% } %>
    <% if (task.schedule) { %>
    <ul id="card-shedule">
      <li class="card-text">
        <%= task.schedule.duration %>
      </li>
      <li class="card-text">
        <%= task.schedule.repeat_frequency %>
      </li>
      <% if (task.schedule.taskDays) { %>
      <li class="card-text">
        <%= task.schedule.taskDays %>
      </li>
      <% } %>
    </ul>
    <hr />
    <% } %>
  </div>
</div>